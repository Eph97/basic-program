##This assumes symmetry (e.g. shock goes from [-5,5])

using Distributions
function generate_distribution(shock) 
    d= Logistic() ##create logistic function
    len = round(Int64,(1/2)*(length(shock)-1)) ##for example, if shock vector goes from -5 to 5, this will output 5
    store = zeros(length(shock)) ##initialize store
    for i in -len:len ##for all the possible shock values
        store[i+len+1] = pdf(d,i) #generate the probability density at that point
    end
    sumstore = sum(store) ##to normalize it

    freq = zeros(length(shock))
    for i in 1:length(store)
        freq[i] = round(Int64,100*store[i]/sumstore) ##round it into integers, 100 is arbitrary
    end
end
